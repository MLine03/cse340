<h1>Add Vehicle</h1>
<% if (message) { %>
  <p style="color:red;"><%= message %></p>
<% } %>
<form method="POST" action="/inv/add-vehicle">
  <%= classificationList %>
  <input type="text" name="inv_make" placeholder="Make" required>
  <input type="text" name="inv_model" placeholder="Model" required>
  <input type="number" name="inv_year" placeholder="Year" required>
  <input type="text" name="inv_description" placeholder="Description">
  <input type="text" name="inv_image" placeholder="Image Path">
  <input type="text" name="inv_thumbnail" placeholder="Thumbnail Path">
  <input type="number" step="0.01" name="inv_price" placeholder="Price" required>
  <input type="number" name="inv_miles" placeholder="Miles" required>
  <input type="text" name="inv_color" placeholder="Color">
  <button type="submit">Add Vehicle</button>
</form>