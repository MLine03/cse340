<h1>Add Vehicle</h1>
<% if(message){ %>
  <p style="color:red;"><%= message %></p>
<% } %>
<form method="POST" action="/inv/add-vehicle" novalidate>
  <%= classificationList %>
  <input type="text" name="inv_make" placeholder="Make" value="<%= sticky.inv_make || '' %>" required>
  <input type="text" name="inv_model" placeholder="Model" value="<%= sticky.inv_model || '' %>" required>
  <input type="number" name="inv_year" placeholder="Year" value="<%= sticky.inv_year || '' %>" required>
  <input type="number" step="0.01" name="inv_price" placeholder="Price" value="<%= sticky.inv_price || '' %>" required>
  <input type="number" name="inv_miles" placeholder="Miles" value="<%= sticky.inv_miles || '' %>" required>
  <input type="text" name="inv_color" placeholder="Color" value="<%= sticky.inv_color || '' %>" required>
  <button type="submit">Add Vehicle</button>
</form>