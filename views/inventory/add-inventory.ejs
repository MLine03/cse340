<h1>Add Vehicle</h1>

<% if (messages.notice) { %>
  <div class="alert alert-warning"><%= messages.notice %></div>
<% } %>

<% if (messages.success) { %>
  <div class="alert alert-success"><%= messages.success %></div>
<% } %>

<% if (errors) { %>
  <ul style="color:red;">
    <% errors.forEach(error => { %>
      <li><%= error %></li>
    <% }) %>
  </ul>
<% } %>

<form action="/inv/add-inventory" method="POST">
  <label for="classificationList">Classification</label>
  <%= classificationList %>

  <label for="inv_make">Make</label>
  <input type="text" name="inv_make" id="inv_make" required
    value="<%= sticky.inv_make ? sticky.inv_make : '' %>">

  <label for="inv_model">Model</label>
  <input type="text" name="inv_model" id="inv_model" required
    value="<%= sticky.inv_model ? sticky.inv_model : '' %>">

  <label for="inv_year">Year</label>
  <input type="number" name="inv_year" id="inv_year" required
    value="<%= sticky.inv_year ? sticky.inv_year : '' %>">

  <label for="inv_price">Price</label>
  <input type="number" name="inv_price" id="inv_price" step="0.01" required
    value="<%= sticky.inv_price ? sticky.inv_price : '' %>">

  <label for="inv_miles">Miles</label>
  <input type="number" name="inv_miles" id="inv_miles" required
    value="<%= sticky.inv_miles ? sticky.inv_miles : '' %>">

  <label for="inv_color">Color</label>
  <input type="text" name="inv_color" id="inv_color" required
    value="<%= sticky.inv_color ? sticky.inv_color : '' %>">

  <label for="inv_image">Image Path</label>
  <input type="text" name="inv_image" id="inv_image"
    value="<%= sticky.inv_image ? sticky.inv_image : '/images/no-image.png' %>">

  <label for="inv_thumbnail">Thumbnail Path</label>
  <input type="text" name="inv_thumbnail" id="inv_thumbnail"
    value="<%= sticky.inv_thumbnail ? sticky.inv_thumbnail : '/images/no-image-tn.png' %>">

  <button type="submit">Add Vehicle</button>
</form>
