<!DOCTYPE html>
<html>
<head><title><%= title %></title></head>
<body>
  <%= nav %>
  <h1>Add Vehicle</h1>

  <% if (errors && errors.length > 0) { %>
    <ul style="color:red">
      <% errors.forEach(err => { %>
        <li><%= err.msg %></li>
      <% }) %>
    </ul>
  <% } %>

  <form method="POST" action="/inv/add-inventory">
    <label>Classification:</label>
    <%= classificationList %><br>

    <label>Make:</label>
    <input type="text" name="inv_make" value="<%= sticky.inv_make || '' %>" required><br>

    <label>Model:</label>
    <input type="text" name="inv_model" value="<%= sticky.inv_model || '' %>" required><br>

    <label>Year:</label>
    <input type="number" name="inv_year" value="<%= sticky.inv_year || '' %>" required><br>

    <label>Price:</label>
    <input type="number" step="0.01" name="inv_price" value="<%= sticky.inv_price || '' %>" required><br>

    <label>Miles:</label>
    <input type="number" step="0.1" name="inv_miles" value="<%= sticky.inv_miles || '' %>" required><br>

    <label>Color:</label>
    <input type="text" name="inv_color" value="<%= sticky.inv_color || '' %>" required><br>

    <label>Description:</label>
    <textarea name="inv_description" required><%= sticky.inv_description || '' %></textarea><br>

    <label>Image Path:</label>
    <input type="text" name="inv_image" value="<%= sticky.inv_image || '/images/no-image.png' %>"><br>

    <label>Thumbnail Path:</label>
    <input type="text" name="inv_thumbnail" value="<%= sticky.inv_thumbnail || '/images/no-image.png' %>"><br>

    <button type="submit">Add Vehicle</button>
  </form>
</body>
</html>
