<h1>Add Inventory</h1>

<% if (errors && errors.length > 0) { %>
  <ul style="color:red;">
    <% errors.forEach(err => { %>
      <li><%= err.msg %></li>
    <% }) %>
  </ul>
<% } %>

<form action="/inv/add-inventory" method="POST">
  <label for="classification_id">Classification:</label>
  <%- classificationList %>

  <label for="inv_make">Make:</label>
  <input type="text" name="inv_make" id="inv_make" value="<%= data.inv_make || '' %>">

  <label for="inv_model">Model:</label>
  <input type="text" name="inv_model" id="inv_model" value="<%= data.inv_model || '' %>">

  <label for="inv_year">Year:</label>
  <input type="number" name="inv_year" id="inv_year" value="<%= data.inv_year || '' %>">

  <label for="inv_description">Description:</label>
  <textarea name="inv_description" id="inv_description"><%= data.inv_description || '' %></textarea>

  <label for="inv_image">Image Path:</label>
  <input type="text" name="inv_image" id="inv_image" value="<%= data.inv_image || '/images/no-image.png' %>">

  <label for="inv_thumbnail">Thumbnail Path:</label>
  <input type="text" name="inv_thumbnail" id="inv_thumbnail" value="<%= data.inv_thumbnail || '/images/no-image.png' %>">

  <label for="inv_price">Price:</label>
  <input type="number" step="0.01" name="inv_price" id="inv_price" value="<%= data.inv_price || '' %>">

  <label for="inv_miles">Miles:</label>
  <input type="number" step="0.01" name="inv_miles" id="inv_miles" value="<%= data.inv_miles || '' %>">

  <label for="inv_color">Color:</label>
  <input type="text" name="inv_color" id="inv_color" value="<%= data.inv_color || '' %>">

  <button type="submit">Add Inventory</button>
</form>
