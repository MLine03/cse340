<!-- views/account/login.ejs -->
<h1>Login</h1>

<% if (message) { %>
  <p class="error"><%= message %></p>
<% } %>

<form action="/account/login" method="POST">
  <label>Email:
    <input type="email" name="email" required>
  </label>
  <label>Password:
    <input type="password" name="password" required>
  </label>
  <input type="submit" value="Login">
</form>